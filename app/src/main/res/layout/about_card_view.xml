<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <Button
    android:layout_width="235dp"
    android:layout_height="wrap_content"
    android:text="@string/about_blog"
    android:id="@+id/aboutButton"
    android:layout_below="@+id/donateButton" android:layout_alignLeft="@+id/donateButton"
    android:layout_alignStart="@+id/donateButton" android:layout_alignRight="@+id/donateButton"
    android:layout_alignEnd="@+id/donateButton"/>
  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/donate_butto"
    android:id="@+id/donateButton" android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"/>
</RelativeLayout>